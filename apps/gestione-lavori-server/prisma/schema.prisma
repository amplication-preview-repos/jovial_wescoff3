datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lavoro {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  titolo      String?
  descrizione String?
  dataInizio  DateTime?
  dataFine    DateTime?
  cliente     Cliente?  @relation(fields: [clienteId], references: [id])
  clienteId   String?
}

model Cliente {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nome      String?
  email     String?
  telefono  String?
  lavoros   Lavoro[]
}
